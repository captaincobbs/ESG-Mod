<?xml version="1.0" encoding="utf-8"?>
<Datatable xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:noNamespaceSchemaLocation="../Schemas/PopulationModifiersTrait.xsd">
  <PopulationModifiersTrait Name="PopulationModifiersTraitSpectator" SubCategory="Affinity" ShowInCustom="false">
    <Modifiers>
      <Modifier Class="ClassPopulationEmpire">
        <SimulationDescriptorReference Name="ClassPopulationEmpireAffinitySpectator"/>
      </Modifier>
      <Modifier Class="ClassPopulationStarSystem">
        <SimulationDescriptorReference Name="ClassPopulationStarSystemAffinitySpectator"/>
        <SimulationDescriptorReference Name="ClassPopulationStarSystemGrowthTypeFood"/>
      </Modifier>
    </Modifiers>
    <AssimilatedModifiers>
      <Modifier Class="ClassPopulationEmpire">
        <SimulationDescriptorReference Name="ClassPopulationAssimilatedEmpireAffinitySpectator"/>
      </Modifier>
    </AssimilatedModifiers>
  </PopulationModifiersTrait>

  <PopulationModifiersTrait Name="PopulationModifiersTraitSpectatorCount" SubCategory="Count">
    <Modifiers>
      <Modifier Class="ClassPopulationPlanet">
        <SimulationDescriptorReference Name="ClassPopulationPlanetAffinitySpectatorCount"/>
      </Modifier>
      <Modifier Class="ClassPopulationStarSystem">
        <SimulationDescriptorReference Name="ClassPopulationStarSystemAffinitySpectatorCount"/>
      </Modifier>
      <Modifier Class="ClassPopulationEmpire">
        <SimulationDescriptorReference Name="ClassPopulationEmpireAffinitySpectatorCount"/>
      </Modifier>
    </Modifiers>
  </PopulationModifiersTrait>

  <SimulationDescriptor Name="ClassPopulationEmpireAffinitySpectator" Type="ClassPopulationEmpire"/>
  <SimulationDescriptor Name="ClassPopulationStarSystemAffinitySpectator" Type="ClassPopulationStarSystem"/>
  <SimulationDescriptor Name="ClassPopulationAssimilatedEmpireAffinitySpectator" Type="ClassPopulationAssimilated">
    <Modifier		TargetProperty="PopulationsAssimilated"			Operation="Addition"		Value="1"	Path="../ClassEmpire" TooltipHidden="true"/>
  </SimulationDescriptor>
</Datatable>